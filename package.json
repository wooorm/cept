{
  "name": "cept",
  "version": "1.0.1",
  "description": "Intercept method calls",
  "license": "MIT",
  "keywords": [
    "intercept",
    "method",
    "function",
    "call",
    "invoke"
  ],
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/wooorm/cept",
  "bugs": "https://github.com/wooorm/cept/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.1",
    "esmangle": "^1.0.1",
    "nyc": "^7.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^6.0.0",
    "remark-lint": "^4.0.0",
    "remark-validate-links": "^4.0.0",
    "tape": "^4.0.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s cept > cept.js",
    "build-mangle": "esmangle cept.js > cept.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "cept.js",
      "cept.min.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "plugins": [
      "comment-config",
      "github",
      "lint",
      "validate-links"
    ],
    "settings": {
      "bullet": "*"
    }
  }
}
